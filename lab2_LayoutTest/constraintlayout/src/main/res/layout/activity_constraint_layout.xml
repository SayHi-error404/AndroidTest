<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".ConstraintLayout">

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f00"
        android:textColor="#000"
        android:gravity="center"
        android:padding="25dp"
        android:text="@string/RED"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF9800"
        android:textColor="#000"
        android:gravity="center"
        android:padding="25dp"
        android:text="@string/ORANGE"
        app:layout_constraintEnd_toStartOf="@+id/textView03"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/TextView01"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:textColor="#000"
        android:gravity="center"
        android:padding="25dp"
        android:text="@string/YELLOW"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView04"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="60dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/GREEN"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/textView05"
        app:layout_constraintEnd_toStartOf="@+id/textView05"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView05"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView05"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#2196F3"
        android:textColor="#000"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/BLUE"
        app:layout_constraintBottom_toBottomOf="@+id/textView06"
        app:layout_constraintEnd_toStartOf="@+id/textView06"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView04"
        app:layout_constraintTop_toTopOf="@+id/textView06"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textView06"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="60dp"
        android:background="#673AB7"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/INDIGO"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView05"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:background="#9C27B0"
        android:textColor="#000"
        android:gravity="center"
        android:text="@string/VIOLET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>